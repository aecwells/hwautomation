# Environment variables for Docker Compose
# Copy this file to .env and modify as needed

# Project Configuration
PROJECT_NAME=hwautomation
ENV_FILE=.env

# Application Settings
DEBUG=1
FLASK_ENV=development
FLASK_DEBUG=1
TESTING=0

# Database Configuration (PostgreSQL for containers)
DB_HOST=db
DB_PORT=5432
DB_NAME=hwautomation_dev
DB_USER=hwautomation
DB_PASSWORD=hwautomation123

# Database Configuration (SQLite for local development)
DATABASE_PATH=hw_automation.db
DATABASE_TABLE_NAME=servers
DATABASE_AUTO_MIGRATE=true
DATABASE_BACKUP_BEFORE_MIGRATION=true

# MaaS Configuration
MAAS_URL=http://maas-simulator:5240/MAAS/
MAAS_CONSUMER_KEY=your-consumer-key-here
MAAS_TOKEN_KEY=your-token-key-here
MAAS_TOKEN_SECRET=your-token-secret-here
MAAS_API_KEY=your-api-key-here
MAAS_ADMIN_USERNAME=admin
MAAS_ADMIN_PASSWORD=admin123
MAAS_VERIFY_SSL=false
MAAS_TIMEOUT=30

# IPMI Configuration
IPMI_USERNAME=admin
IPMI_PASSWORD=your-ipmi-password-here
IPMI_TIMEOUT=60
IPMI_RETRIES=2

# SSH Configuration
SSH_USERNAME=ubuntu
SSH_TIMEOUT=30
SSH_RETRIES=3

# Network Configuration
NETWORK_PING_TIMEOUT=5
NETWORK_PING_COUNT=3
NETWORK_SSH_TIMEOUT=10

# REDFISH Configuration
REDFISH_TIMEOUT=30
REDFISH_VERIFY_SSL=false
REDFISH_RETRIES=3

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/hwautomation.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# Development Tools
PYTHONPATH=/app/src
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1

# Development Configuration
DEVELOPMENT_DEBUG=false
DEVELOPMENT_TEST_DATABASE=test_hw_automation.db
DEVELOPMENT_MOCK_SERVICES=false
