# Environment variables for Docker Compose
# Copy this file to .env and modify as needed

# Project Configuration
PROJECT_NAME=hwautomation
ENV_FILE=.env

# Application Settings
DEBUG=1
FLASK_ENV=development
FLASK_DEBUG=1
TESTING=0

# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_NAME=hwautomation_dev
DB_USER=hwautomation
DB_PASSWORD=hwautomation123

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# MaaS Configuration (for testing)
MAAS_URL=http://maas-simulator:5240/MAAS/
MAAS_API_KEY=your-api-key-here
MAAS_ADMIN_USERNAME=admin
MAAS_ADMIN_PASSWORD=admin123

# SSH Configuration
SSH_TIMEOUT=30
SSH_RETRIES=3

# IPMI Configuration
IPMI_TIMEOUT=60
IPMI_RETRIES=2

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/hwautomation.log

# Development Tools
PYTHONPATH=/app/src
PYTHONDONTWRITEBYTECODE=1
PYTHONUNBUFFERED=1
